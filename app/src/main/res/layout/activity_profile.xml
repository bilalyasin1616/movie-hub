<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin_top"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ConcernedPortionofScreen"
            android:layout_width="match_parent"
            android:layout_height="250dip"
            android:background="@color/white"
            android:orientation="vertical">

            <!-- Parent FrameLayout 'FL' -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:background="@color/dim_white2"
                android:layout_height="150dip">

                <!--cover photo-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25dp"
                    android:background="#b2ebf2" >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/img_cover"
                        android:src="@drawable/banner_1024x500"
                        android:scaleType="centerCrop"/>
                </LinearLayout>

                <!--profile picture-->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:id="@+id/civ_profile_pic"
                    android:layout_gravity="bottom|left"
                    android:src="@drawable/banner_1024x500"
                    android:layout_marginLeft="20dip"/>

            </android.support.v7.widget.CardView>


            <!--channel name-->
            <TextView
                android:textColor="@color/colorPrimary"
                android:id="@+id/tv_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shaheryar Tariq (Preminum User)"
                android:textStyle="bold"
                android:textSize="@dimen/title_text_size"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="15dip"/>

            <!--subscribe portion-->
            <LinearLayout
                android:paddingTop="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lin_subscribe"
                android:layout_marginLeft="20dip"
                android:orientation="vertical">

                <!--subscribe button-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="shaheryartariq909@gmail.com"
                        android:id="@+id/tv_email"

                        android:textStyle="bold"
                        android:layout_centerVertical="true"/>


                </RelativeLayout>

                <!--subscriber count-->


                <TextView
                    android:paddingTop="5dip"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:text="Uploaded Videos : 456"
                    />



            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uploaded Videos"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/title_text_size"
        android:layout_margin="15dip"
        />

    <View
        style="@style/divider"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/gray"></View>



</LinearLayout>
