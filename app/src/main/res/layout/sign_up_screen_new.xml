<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
   >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            style="@style/full_width_button"
            android:text="SignUp"
            android:id="@+id/btn_sign_in"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin_top"
            android:background="@android:color/white"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dip">

                <!--cover photo-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25dp"
                    android:background="@color/dim_white" >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/img_cover"
                        android:tint="@color/white"
                        android:src="@drawable/profile_preview"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rel_img_camera"

                    android:clickable="true"
                    android:layout_gravity="bottom|right"
                    >
                <!--profile picture-->
                <ImageView
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:src="@drawable/camera_btn"
                    android:id="@+id/img_camera"
                    android:layout_marginRight="20dip"/>
                </RelativeLayout>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/lin_form"
            android:layout_margin="10dip"
            android:padding="10dip"
            android:layout_below="@+id/lin_top">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:drawableEnd="@drawable/ic_account_circle_black_24dp"
                    android:drawableTint="@color/gray"
                    android:id="@+id/et_full_name"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:drawableEnd="@drawable/ic_email_black_24dp"
                    android:drawableTint="@color/gray"
                    android:id="@+id/et_email"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:drawableEnd="@drawable/ic_vpn_key_black_24dp"
                    android:drawableTint="@color/gray"
                    android:id="@+id/et_username"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:drawableEnd="@drawable/ic_visibility_black_24dp"
                    android:drawableTint="@color/gray"
                    android:id="@+id/et_password"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>

</LinearLayout>

